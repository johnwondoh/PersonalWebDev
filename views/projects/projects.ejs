<% include ../partials/header %>
    <div class="jumbotron jumbotron-fluid jumbotron-try">
        <!--<h1 class="page-header">Research Page</h1>-->
        <!--<p>Some important content here describing the page</p>-->
        <h1 class="jumbotron-title">Research Contributions</h1>
        <p class="home-p-style">
            This is a modified jumbotron that occupies the entire horizontal space of its parent.
        </p>
    </div>
    
    <% if(currentUser){%>
        <div class="container">
            <!--<h1>My projects</h1>-->
            <a class="btn btn-primary" href="/projects/new">Add New Project</a>
        </div>
    <% } %>
    
    <% projects.forEach(function(project){%>
        <div class="container">
            <div class="card">
                <!--<h5 class="card-header"><%= project.title %></h5>-->
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <img class="card-img small-img" src="/image/<%=project.images[0]%>">
                        </div>
                        <div class="col-sm-10">
                            <!--<h5 class="card-title">Special title treatment</h5>-->
                            <h5 class="card-title"><%= project.title %></h5>
                            <p class="card-text"><%- project.summary %></p>
                            <!--<p class="card-subtitle mb-2 text-muted">Updated on: <%= project.created %></p>-->
                            <h6 class="card-subtitle mb-2 text-muted">
                                Updated on: <%= project.created.toDateString() %> 
                            </h6>
                            <a href="/projects/<%=project._id%>" class="btn btn-outline-primary btn-sm">View Project <i class="fas fa-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
                <!--<div class="card-footer text-muted">-->
                <!--    Updated on: <%= project.created %>-->
                <!--</div>-->
            </div>
        </div>
    <% })%>

<% include ../partials/footer %>