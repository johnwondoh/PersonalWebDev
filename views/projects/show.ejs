<% include ../partials/header %>

    <div class=" mt-3 container card project-show">
            <!------------------------------------------------------------------------------>
        <!--<div class="container mt-3 mb-3">-->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for(var i = 0; i < project.images.length; i++){ %>
                    <% if(i === 0){ %>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>" class="active"></li>
                    <% } else { %>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>"></li>
                    <% } %>
                <% } %>
            </ol>
            <div class="carousel-inner">
                
                <% for(var i = 0; i < project.images.length; i++){ %>
                    <% if(i === 0){ %>
                        <div class="carousel-item active">
                            <img class="card-img-top mx-auto mt-2 d-block w-100" src="/image/<%=project.images[i]%>">
                        </div>
                    <% } else { %>
                        <div class="carousel-item">
                            <img class="card-img-top mx-auto mt-2 d-block w-100" src="/image/<%=project.images[i]%>">
                        </div>
                    <% } %>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!--</div>-->
        <!------------------------------------------------------------------------------>
        <!--<img class="card-img-top rounded-project-image mx-auto d-block" src="/image/<%=project.images[0]%>" alt="Card image cap">-->
        <div class="card-body">
            <a class="float-right text-muted" href="/projects/<%=project._id%>/images">
                <small>View all project photos</small>
            </a>
            <h5 class="card-title"><%=project.title%></h5>
            <p class="card-text"><%-project.content%></p>
            
            <!-- status -->
            <div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: <%=project.status%>%" aria-valuenow="<%=project.status%>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            
            <p class="card-text"><small class="text-muted">Updated on: <%=project.created.toDateString()%></small></p>
            
            <% if(currentUser){%>
                <form action="/projects/<%=project._id%>?_method=DELETE" method="POST">
                    <a href="/projects/<%=project._id%>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
            <% } %>
        </div>
        <div>
            <a href="/projects" class="huge"><i class="fas fa-arrow-circle-left"></i></a>
        </div>
    </div>
    
    
<% include ../partials/footer %>